<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movieBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg3"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/movePic"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg5"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/movePic"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <RelativeLayout

                            android:id="@+id/rel10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Rotten1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Likes: "
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Rotten2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#0E5A57"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/rel10"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/auid1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:textColor="#FFFFFF"
                                android:text="Downloaded: "
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/auid2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#045325"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel12"
                            android:layout_below="@id/rel11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/imdb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true" android:text="IMDB: "
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/imdb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/imstar"

                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#976D16"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imstar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_alignParentRight="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/stared" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel13"
                            android:layout_below="@id/rel12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/gotowatch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:scaleType="center"
                                android:src="@drawable/homepage" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/movieName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text=" "
                    android:fontFamily="sans-serif-black"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/rel1"
                    android:gravity="left"
                    android:textColor="#05000C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movieGenre"
                    android:layout_below="@id/movieName"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text=""
                    android:fontFamily="casual"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#5B0969"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movieCast"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/movieGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="Cast: "
                    android:fontFamily="serif-monospace"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#2318A8"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movieCast2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/movieCast"
                    android:gravity="left"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:fontFamily="serif"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#090000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/syno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="summary: "
                    android:fontFamily="serif-monospace"
                    android:layout_below="@id/movieCast2"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#A30909"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movieSyno"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/syno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#180101"
                    android:textSize="16sp"
                    android:typeface="sans" />

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
